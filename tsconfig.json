{
    "exclude": ["node_modules", "ts-temp"],
    "include": ["./**/*.ts", "./**/*.mask"],
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": "./",
        "paths": {
            "@core/*": [ "src/*" ],
            "@dequanto/*": [ "dequanto/src/*" ],
            "@dequanto-contracts/*": [ "dequanto/src/prebuilt/*" ]
        },
        "outDir": "ts-temp",
        "lib": ["es2024", "DOM"],
        "typeRoots": [
            "node_modules/@types",
            "typings/globals",
            "typings-other"
        ],
        "types": ["node", "assertion", "atma-utest"],

        "target": "es2024",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    }
}
