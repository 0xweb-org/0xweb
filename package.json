{
    "name": "0xweb",
    "description": "Contract package manager and other web3 tools",
    "version": "0.10.34",
    "main": "./lib/0xweb.js",
    "types": "./lib/0xweb.d.ts",
    "bin": {
        "0xweb": "index.js"
    },
    "author": {
        "name": "Alex Kit",
        "email": "alex.kit@atmajs.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xweb-org/0xweb"
    },
    "homepage": "https://0xweb.org",
    "keywords": [
        "web3",
        "contracts",
        "evm",
        "auto-generation",
        "cli",
        "cli wallet"
    ],
    "license": "MIT",
    "dependencies": {
        "@noble/curves": "^1.2.0",
        "@noble/hashes": "^1.3.2",
        "@scure/bip32": "^1.3.2",
        "@scure/bip39": "^1.2.1",
        "@solidity-parser/parser": "^0.16.0",
        "a-di": "^1.0.25",
        "alot": "^0.3.7",
        "appcfg": "^0.4.68",
        "atma-io": "^1.2.60",
        "atma-io-middleware-yml": "^1.1.25",
        "atma-utils": "^0.2.60",
        "everlog": "^1.0.9",
        "isomorphic-ws": "^5.0.0",
        "memd": "^0.3.10",
        "shellbee": "^0.5.22"
    },
    "devDependencies": {
        "@0xweb/hardhat": "^0.1.15",
        "@openzeppelin/contracts": "^4.9.3",
        "@types/node": "^12.6.2",
        "app-bundler": "^0.1.16",
        "atma": "^0.15.20",
        "atma-loader-ts": "^1.1.18",
        "atma-utest": "^0.21.31",
        "dts-bundle": "^0.7.3",
        "hardhat": "^2.18.0",
        "typedoc": "^0.23.14",
        "typescript": "^4.8.2"
    },
    "scripts": {
        "build": "npm run build-bundle",
        "build-bundle": "app-bundler",
        "build-dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "watch": "app-bundler -watch",
        "release": "atma bump && npm run build && git add -A && git commit -am 'bump' && git push && git push origin master:release",
        "test": "atma --openssl-legacy-provider test"
    },
    "app-bundler": {
        "apps": {
            "cli": {
                "file": "src/cli.ts",
                "outputMain": "lib/cli.js",
                "package": {
                    "moduleWrapper": "custom",
                    "moduleWrapperCustomPath": "./src/module.js"
                }
            },
            "lib": {
                "file": "src/export.ts",
                "outputMain": "lib/0xweb.js"
            }
        },
        "common": {
            "package": {
                "module": "commonjs",
                "commonjs": {
                    "output": "simplified"
                }
            },
            "extensions": {
                "io": {
                    "type": "js"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "dynamicDependencies": [
                "^events$",
                "^https$",
                "^http$",
                "^net$",
                "^tls$",
                "^querystring$",
                "^zlib$",
                "^os$",
                "^stream$",
                "^url$",
                "^crypto$",
                "shellbee",
                "everlog",
                "memd",
                "appcfg",
                "alot",
                "fs",
                "atma-io",
                "atma-utils",
                "includejs",
                "^@ethersproject",
                "^@ethereumjs",
                "^@solidity-parser",
                "^ethers",
                "^web3$",
                "^web3-utils$",
                "^path$",
                "^child_process$",
                "^readline$",
                "^hardhat$",
                "^@gnosis.pm",
                "ethereumjs-util",
                "^papaparse$",
                "^isomorphic-ws$"
            ],
            "middlewares": {
                "ts": [
                    "atma-loader-ts:read"
                ],
                "yml": [
                    "atma-io-middleware-yml:read",
                    "atma-io-middleware-yml:write"
                ]
            },
            "options": {
                "include": {
                    "routes": {
                        "@core": "src/{0}",
                        "@dequanto": "dequanto/src/{0}",
                        "@dequanto-contracts": "dequanto/contracts/{0}"
                    }
                }
            },
            "settings": {
                "atma-loader-ts": {
                    "typescript": {
                        "compilerOptions": {
                            "#if (TEST)": {
                                "module": "AMD"
                            },
                            "#if (!TEST)": {
                                "module": "commonjs"
                            },
                            "sourceMap": false,
                            "experimentalDecorators": true,
                            "esModuleInterop": true,
                            "allowSyntheticDefaultImports": true,
                            "target": "ES2020"
                        }
                    }
                }
            }
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts",
            "atma-io-middleware-yml"
        ],
        "settings": {
            "atma-utest": {
                "include": {
                    "amd": true,
                    "extensionDefault": {
                        "js": "ts"
                    }
                }
            },
            "include": {
                "amd": true,
                "extensionDefault": {
                    "js": "ts"
                },
                "routes": {
                    "@core": "src/{0}",
                    "@dequanto": "dequanto/src/{0}",
                    "@dequanto-contracts": "dequanto/contracts/{0}"
                }
            },
            "atma-loader-ts": {
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "commonjs"
                        },
                        "sourceMap": false,
                        "experimentalDecorators": true,
                        "esModuleInterop": true,
                        "allowSyntheticDefaultImports": true,
                        "target": "ES2020"
                    }
                }
            }
        }
    }
}
